<Window x:Class="CAD_TagCreator.NodeCreatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="節點建立工具"
        Height="450
        "
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- 按鈕樣式 -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BDBDBD"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox 樣式 -->
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Label 樣式 -->
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5,8"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 標題 -->
        <TextBlock Grid.Row="0"
                   Text="節點建立工具"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#333333"
                   HorizontalAlignment="Center"/>

        <!-- 代碼前綴輸入 -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Content="代碼前綴：" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1"
                     x:Name="TextBoxPrefix"
                     VerticalAlignment="Center"
                     ToolTip="請輸入節點代碼前綴，例如：ABC"/>
        </Grid>

        <!-- 起始號碼輸入 -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Content="起始號碼：" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1"
                     x:Name="TextBoxStartNumber"
                     VerticalAlignment="Center"
                     Text="1"
                     ToolTip="請輸入起始號碼，例如：1"/>
        </Grid>

        <!-- 標籤縮放比例輸入 -->
        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Content="標籤縮放比例：" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1"
                     x:Name="TextBoxZoomRatio"
                     VerticalAlignment="Center"
                     Text="300"
                     ToolTip="調整標籤和圖塊的大小，數值越大越大，預設：300"/>
        </Grid>

        <!-- 統計資訊 -->
        <Border Grid.Row="8"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="4"
                Padding="10"
                Margin="0,10,0,0">
            <StackPanel>
                <TextBlock FontSize="12" Foreground="#666666">
                    <Run Text="已建立節點："/>
                    <Run x:Name="TextNodesCreated" Text="0" FontWeight="Bold" Foreground="#2196F3"/>
                    <Run Text="個"/>
                </TextBlock>
                <TextBlock FontSize="12" Foreground="#666666" Margin="0,3,0,0">
                    <Run Text="已建立線段："/>
                    <Run x:Name="TextLinesCreated" Text="0" FontWeight="Bold" Foreground="#4CAF50"/>
                    <Run Text="條"/>
                </TextBlock>
                <TextBlock FontSize="12" Foreground="#666666" Margin="0,3,0,0">
                    <Run Text="已建立面域："/>
                    <Run x:Name="TextAreasCreated" Text="0" FontWeight="Bold" Foreground="#FF9800"/>
                    <Run Text="個"/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- 按鈕區域 -->
        <Grid Grid.Row="9" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    x:Name="StartButton"
                    Content="開始建立"
                    Click="StartButton_Click"/>

            <Button Grid.Column="1"
                    x:Name="ExitButton"
                    Content="結束並輸出"
                    Background="#4CAF50"
                    Click="ExitButton_Click"
                    IsEnabled="False"/>
        </Grid>
    </Grid>
</Window>
